{
    "manifest_version": 2,
    "name": "Cabbage's Anti-Procrastinator",
    "version": "1.3.37",
    "description": "Redirects time-sink sites to a custom URL. Stop reddit! (+ optionally replaces newtab)",
    "icons": {
        "128": "icons/on.png"
    },

    "background": {
        "scripts": ["jquery.js", "bg-requests.js"]
    },

    "permissions": ["webRequest", "webRequestBlocking", "storage"],
    "optional_permissions": [
        "*://*/*"
    ],

    "chrome_url_overrides": {
        "newtab": "redirect.html"
    },

    "browser_action": {
        "default_icon": "icons/on.png",
        "default_title": "Toggle Anti-Procrastinator"
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }


}
